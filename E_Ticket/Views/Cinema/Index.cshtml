@model IEnumerable<CinemaViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center text-black-50">All Cinemas</h1>
<br />
<br />

<div class="row">
    <div class="col-md-8 offset-md-2">
        <table class="table">
            <thead>
                <tr >
                    <th>@Html.DisplayNameFor(c=>c.Logo)</th>
                    <th>@Html.DisplayNameFor(c=>c.Name)</th>
                    <th>@Html.DisplayNameFor(c=>c.Description)</th>
                  
                    <th>Actions</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="align-middle">
                            <img class="rounded-circle" src="@item.Logo" alt="@item.Name" style="max-width:150px">
                        </td>
                        <td class="align-middle">@item.Name</td>
                        <td class="align-middle">@item.Description</td>
                       
                        <td class="align-middle">
                            <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@item.Id" ><i class="fas fa-pencil"></i> Edit</a>
                            <a class="btn btn-outline-info" asp-action="Details"asp-route-id="@item.Id" ><i class="fas fa-eye"></i> Details</a>
                            <a class="btn btn-danger text-white " asp-action="Delete" asp-route-id="@item.Id"><i class="fas fa-trash"></i> Delete</a>
                        </td>
                    </tr>
                }
            </tbody>

        </table>
    </div>
</div>

<div>
    <a asp-controller="Cinema" asp-action="Create" style="position:fixed; right:25px; bottom:25px;" class="btn btn-success">
        <i class="badge-info bi-plus-circle"> </i> Add New Actor
    </a>

</div>


