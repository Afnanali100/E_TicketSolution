@model MovieViewModel
@inject IUnitOfWork unitOFWork
@{
    List<SelectListItem> category = Enum.GetValues(typeof(MovieCategory))
            .Cast<MovieCategory>()
            .Select(c => new SelectListItem
            {
                Text = c.ToString(),
                Value = ((int)c).ToString()
            }).ToList();

    var producers = new SelectList(await unitOFWork.ProducergenericRepository.GetAllAsync(), "Id", "FullName");
    var cinemas = new SelectList(await unitOFWork.CinemagenericRepository.GetAllAsync(),"Id","Name");
    var actors = new SelectList(await unitOFWork.ActorgenericRepository.GetAllAsync(), "Id", "FullName");
}
@*
