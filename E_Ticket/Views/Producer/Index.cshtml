@model IEnumerable<ProducerViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center text-black-50">All Producers</h1>
<br />
<br />

<div class="row">
    <div class="col-md-8 offset-md-2">
        <table class="table">
            <thead>
                <tr class="text-center">
                    <th>@Html.DisplayNameFor(p=>p.ProfilePictureURL)</th>
                    <th>@Html.DisplayNameFor(p=>p.FullName)</th>
                    <th>@Html.DisplayNameFor(p=>p.Bio)</th>
                    <th>Actions</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="align-middle">
                            <img class="rounded-circle" src="@item.ProfilePictureURL" alt="@item.FullName" style="max-width:150px">
                        </td>
                        <td class="align-middle">@item.FullName</td>
                        <td class="align-middle">@item.Bio</td>
                        <td class="align-middle">
                            <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@item.Id"><i class="fas fa-pencil"></i> Edit</a>
                            <a class="btn btn-outline-info" asp-action="Details" asp-route-id="@item.Id"><i class="fas fa-eye"></i> Details</a>
                            <a class="btn btn-danger text-white " asp-action="Delete" asp-route-id="@item.Id"><i class="fas fa-trash"></i> Delete</a>
                        </td>
                    </tr>
                }
            </tbody>

        </table>
    </div>
</div>

<div>
    <a asp-controller="Producer" asp-action="Create" style="position:fixed; right:25px; bottom:25px;" class="btn btn-success">
        <i class="badge-info bi-plus-circle"> </i> Add New Producer
    </a>

</div>

